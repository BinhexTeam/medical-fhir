<odoo>
    <record model="ir.ui.view" id="medical_patient_form_view">
        <field name="name">medical.patient.form (in medical_product_request)</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="medical_administration.medical_patient_form" />
        <field
            name="groups_id"
            eval="[(4, ref('medical_product_request.group_medical_product_request_display'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="create_medical_product_request"
                    class="oe_stat_button btn-info"
                    string="Create Ext. Prescription"
                    type="object"
                    context="{'default_category': 'discharge', 'default_patient_id': active_id}"
                    icon="fa-prescription"
                />
                <button
                    name="create_medical_product_request"
                    class="oe_stat_button btn-success"
                    string="Create Int. Medical Order"
                    type="object"
                    context="{'default_category': 'inpatient',  'default_patient_id': active_id}"
                    icon="fa-pills"
                />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_external_medical_product_request_order_ids"
                    class="oe_stat_button"
                    icon="fa-prescription"
                >
                    <field
                        name="external_product_request_order_count"
                        widget="statinfo"
                        string="Ext. Prescriptions"
                    />
                </button>
                <button
                    type="object"
                    name="action_view_internal_medical_product_request_order_ids"
                    class="oe_stat_button"
                    icon="fa-pills"
                >
                    <field
                        name="internal_product_request_order_count"
                        widget="statinfo"
                        string="Int. Medical Order"
                    />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
