<odoo>
    <!-- Clinical Impressions -->

    <record model="ir.ui.view" id="medical_patient_his_form">
        <field name="name">medical.patient.form</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="medical_base.medical_patient_his_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='administration_data']" position="after">
                <page name="imaging_studies" string="Imaging Studies">

                    <field name="study_ids">

                        <tree editable="bottom">
                            <field name="name" />
                            <field name="encounter_id" />
                            <field name="series_count" string="Series"/>
                            <field name="modality_ids" widget="many2many_tags" />
                            <field name="description" />
                            <field name="referring_physician" />
                            <field name="read_physician" />
                            <field name="body_part" />
                            <field name="description_series"/>
                            <field name="study_date" />
                        </tree>
                  </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
