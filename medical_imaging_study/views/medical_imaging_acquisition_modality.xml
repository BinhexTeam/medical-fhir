<odoo>
    <record model="ir.ui.view" id="medical_imaging_acquisition_modality_form_view">
        <field
            name="name"
        >medical.imaging.acquisition.modality.form (in medical_imaging_study)</field>
        <field name="model">medical.imaging.acquisition.modality</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="code" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_imaging_acquisition_modality_search_view">
        <field
            name="name"
        >medical.imaging.acquisition.modality.search (in medical_imaging_study)</field>
        <field name="model">medical.imaging.acquisition.modality</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="code" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_imaging_acquisition_modality_tree_view">
        <field
            name="name"
        >medical.imaging.acquisition.modality.tree (in medical_imaging_study)</field>
        <field name="model">medical.imaging.acquisition.modality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="medical_imaging_acquisition_modality_act_window"
    >
        <field name="name">Medical Imaging Acquisition Modality</field>
        <field name="res_model">medical.imaging.acquisition.modality</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="medical_imaging_acquisition_modality_menu">
        <field name="name">Medical Imaging Acquisition Modality</field>
        <field name="parent_id" ref="medical_base.medical_root_configuration" />
        <field name="action" ref="medical_imaging_acquisition_modality_act_window" />
        <field name="sequence" eval="99" />
    </record>
</odoo>
