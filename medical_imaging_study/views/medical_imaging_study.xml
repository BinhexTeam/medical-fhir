<odoo>
    <record model="ir.ui.view" id="medical_imaging_study_form_view">
        <field name="name">medical.imaging.study.form (in medical_imaging_study)</field>
        <field name="model">medical.imaging.study</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button
                            name="update_study_data"
                            type="object"
                            icon="fa-refresh"
                            string="Update data"
                        />
                    </div>
                    <group>
                        <field name="name" />
                        <field name="instance_uid" />
                        <field name="patient_id" />
                        <field name="encounter_id" />
                        <field name="modality_ids" widget="many2many_tags" />
                        <field name="study_date" />
                        <field name="series_count" />
                        <field name="instances_count" />
                        <field name="description" />
                        <field name="storage_ids" widget="many2many_tags" />
                    </group>
                    <notebook>
                        <page name="series" string="Series">
                            <field
                                name="series_ids"
                                attrs="{'readonly':[('state', 'not in', ['registered'])]}"
                            >
                                <tree editable="bottom">
                                    <field name="series_number" />
                                    <field name="instance_uid" />
                                    <field name="modality_id" />
                                    <field name="imaging_study_id" invisible="1" />
                                    <field name="state" invisible="1" />
                                    <field name="patient_id" invisible="1" />
                                    <field name="encounter_id" invisible="1" />
                                    <field name="description" />
                                    <field name="series_date" />
                                    <field name="instances_count" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="medical_imaging_study_tree_view">
        <field name="name">medical.imaging.study.tree (in medical_imaging_study)</field>
        <field name="model">medical.imaging.study</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="encounter_id" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="medical_imaging_study_act_window">
        <field name="name">Imaging Studies</field>
        <field name="res_model">medical.imaging.study</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="medical_root_diagnostic"
        name="Diagnostic"
        parent="medical_base.medical_root_clinical"
        sequence="30"
    />
    <record model="ir.ui.menu" id="medical_imaging_study_root_menu">
        <field name="name">Imaging Studies</field>
        <field name="parent_id" ref="medical_base.medical_root_clinical" />
        <field name="sequence" eval="40" />
    </record>
    <record model="ir.ui.menu" id="medical_imaging_study_menu">
        <field name="name">Imaging Studies</field>
        <field name="parent_id" ref="medical_imaging_study_root_menu" />
        <field name="action" ref="medical_imaging_study_act_window" />
        <field name="sequence" eval="16" />
    </record>
</odoo>
